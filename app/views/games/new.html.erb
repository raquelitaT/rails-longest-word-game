<h1>New game</h1>
<h2> <% @letters.each do |letter| %>
 <%= letter.upcase %>
 <% end %></h2>


<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :longest_word_rand, @letters %>
  <input type="text" name="word" placeholder="Insert your longest word!">
  <input type="submit" value="Play">
</form>


